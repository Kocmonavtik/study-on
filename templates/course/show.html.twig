{% extends 'base.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}
    <div class="container p-2 mt-5">
        <div class="row m-1">
            <div class="d-flex flex-column p-2">
                <p>Название курса {{ course.title }}</p>
                <p>Описание: {{ course.description }}</p>
                <p>Список уроков:</p>
                <table class="table">
                    <thead>
                    <tr>
                      {#  <th>Id</th>#}
                        <th>Title</th>
                        <th>Content</th>
                      {#  <th>Serial_number</th>
                        <th>actions</th>#}
                    </tr>
                    </thead>
                    <tbody>
                    {% for lesson in course.lessons|sort((a,b)=>a.serialNumber <=> b.serialNumber) %}
                        <tr>
                          {#  <td>{{ lesson.id }}</td>#}
                            <td><a class="text-dark" href="{{ path('app_lesson_show', {'id': lesson.id}) }}">{{ lesson.title }}</a></td>
                            <td><a class="text-dark" href="{{ path('app_lesson_show', {'id': lesson.id}) }}">{{ lesson.content }}</a></td>
                            {#<td>{{ lesson.serialNumber }}</td>#}
                            <td>
                                {#<a class="btn btn-success" href="{{ path('app_lesson_show', {'id': lesson.id}) }}">show</a>#}
                                <a class="btn btn-success" href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">edit</a>
                                {{ include('lesson/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <a  class="btn btn-success mt-2" href="{{ path('app_course_index') }}">Вернуться</a>

        <a class="btn btn-success mt-2" href="{{ path('app_course_edit', {'id': course.id}) }}">Редактировать курс</a>
        <a class="btn btn-warning mt-2" href="{{ path('app_lesson_new', {'course':course.id}) }}">Добавить урок</a>

    </div>
    {{ include('course/_delete_form.html.twig') }}


