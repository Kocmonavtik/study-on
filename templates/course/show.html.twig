{% extends 'base.html.twig' %}

{% block title %}{{course.title}}{% endblock %}

{% block body %}
    <div class="container p-2 mt-5">
        <div class="row m-1">
            <div class="d-flex flex-column p-2">
                <h1 class="title_course">{{ course.title }}</h1>
                <p class="description_course">{{ course.description }}</p>
                <p>Список уроков:</p>
                <table class="table">
                    <thead>
                    <tr>
                      {#  <th>Id</th>#}
                        <th>Название</th>
                        <th>Описание</th>
                       {# <th>Serial_number</th>#}
                       {# <th>actions</th>}#}
                    </tr>
                    </thead>
                    <tbody>
                    {% for lesson in course.lessons %}
                        <tr>
                          {#  <td>{{ lesson.id }}</td>#}
                            <td><a class="text-dark lesson_title text-decoration-none" href="{{ path('app_lesson_show', {'id': lesson.id}) }}">{{ lesson.title }}</a></td>
                            <td><a class="text-dark lesson_content text-decoration-none" href="{{ path('app_lesson_show', {'id': lesson.id}) }}">{{ lesson.content }}</a></td>
                           {# <td>{{ lesson.serialNumber }}</td>#}
                            <td>
                                {#<a class="btn btn-success" href="{{ path('app_lesson_show', {'id': lesson.id}) }}">show</a>#}
                                <a class="btn btn-success" href="{{ path('app_lesson_show', {'id': lesson.id}) }}">Открыть</a>
                                {% if is_granted('ROLE_SUPER_ADMIN') %}
                                    <a class="btn btn-success edit_lesson" href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">Редактировать</a>
                                    {{ include('lesson/_delete_form.html.twig') }}
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">Записей не найдено</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <a  class="btn btn-success mt-2" href="{{ path('app_course_index') }}">Вернуться</a>

        {% if is_granted('ROLE_SUPER_ADMIN') %}
            <a class="btn btn-success mt-2 course_edit" href="{{ path('app_course_edit', {'id': course.id}) }}">Редактировать курс</a>
            <a class="btn btn-warning mt-2 add_lesson" href="{{ path('app_lesson_new', {'course':course.id}) }}">Добавить урок</a>
        {% endif %}

    </div>
    {% if is_granted('ROLE_SUPER_ADMIN') %}
        {{ include('course/_delete_form.html.twig') }}
    {% endif %}


