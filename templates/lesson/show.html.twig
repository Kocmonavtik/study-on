    <a class="btn btn-success" href="{{path('app_course_show', {'id': lesson.course.id}) }}">Вернуться</a>
    <a class="btn btn-success"  href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">Редактировать</a>
    {{ include('lesson/_delete_form.html.twig') }}
</div>
{% endblock %}
