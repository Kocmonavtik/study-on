<form method="post" action="{{ path('app_lesson_delete', {'id': lesson.id}) }}" onsubmit="return confirm('Вы хотите удалить данный урок?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ lesson.id) }}">
    <button id="lesson_delete" class="btn btn-danger w-100 mt-2">Удалить</button>
</form>
